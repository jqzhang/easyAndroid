<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--返回按钮， CheckBox，RadioButton，SwitchCompat等默认状态的颜色-->
        <item name="colorControlNormal">@color/colorNavigationBarText</item>
        <!--NavigationBar 背景色-->
        <item name="colorPrimary">@color/action_bar_bg</item>
        <!--应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/app_theme</item>
        <!--CheckBox，RadioButton，SwitchCompat等一般控件的选中效果默认采用该颜色-->
        <item name="colorAccent">@color/app_theme</item>
        <!--控件按压时的色调-->
        <item name="colorControlHighlight">@color/app_theme</item>
        <!--控件选中时的颜色，默认使用colorAccent-->
        <item name="colorControlActivated">@color/app_theme</item>
    </style>

    <style name="ToolBarTheme" parent="BaseToolBarTheme">
    </style>

    <style name="LoadDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppButton">
        <item name="android:textColor">@color/base_c_a</item>
        <item name="android:background">@drawable/circle_line_btn_bg</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_height">@dimen/dp_23</item>
        <item name="android:gravity">center</item>
    </style>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>


    <style name="CommonDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>
